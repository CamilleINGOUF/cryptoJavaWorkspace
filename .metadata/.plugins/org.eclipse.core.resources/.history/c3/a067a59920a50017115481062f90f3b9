
public class Vigenere 
{
	public static void vigenere(String key, String word)
	{
		//Read char by char the key and the word
		for(char c : key.toCharArray())
			System.out.println(c);
		
		System.out.println();
		
		for(char c : word.toCharArray())
			System.out.println(c);
		
		System.out.println("==================");
		
		System.out.println((char)(('h'+'w')%96));
		
		System.out.println("==================");
		
		
		
		for(int i = 0; i < word.length(); i++)
		{
			//TODO add values of chars together
			int letterWord = word.charAt(i);
			int letterKey = key.charAt(i%key.length());
			
			System.out.println((char)(letterWord+(letterKey-97)));
		}
		
		System.out.println("TODO print crypted word");
	}
	
	public static void main(String[] args) 
	{
		vigenere("key","wordword");
	}
}
